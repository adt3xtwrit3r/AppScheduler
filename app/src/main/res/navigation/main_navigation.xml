<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.mubin.appscheduler.ui.login.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mubin.appscheduler.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_submitIssueFragment"
            app:destination="@id/submitIssueFragment" />
    </fragment>

    <fragment
        android:id="@+id/submitIssueFragment"
        android:name="com.mubin.appscheduler.ui.home.SubmitIssueFragment"
        tools:layout="@layout/fragment_submit_issue" >
        <action
            android:id="@+id/action_submitIssueFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>


</navigation>